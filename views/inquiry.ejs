<%- include('partials/header') %>

    <div class="inquiry-container">
        <h2 class="section-title">
            <%= t.inquiry_title %>
        </h2>
        <!-- Note: On static GitHub Pages, POST requests won't work. We'll use a placeholder action or mailto for demo purposes if static. -->
        <form action="<%= baseUrl %>/api/inquiry" method="POST"
            onsubmit="alert('This feature requires a backend server. On GitHub Pages, data cannot be saved.'); return false;">
            <div class="form-group">
                <label for="name">
                    <%= t.inquiry_name %>
                </label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="contact">
                    <%= t.inquiry_contact %>
                </label>
                <input type="text" id="contact" name="contact" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="message">
                    <%= t.inquiry_message %>
                </label>
                <textarea id="message" name="message" class="form-control" required></textarea>
            </div>
            <button type="submit" class="submit-btn">
                <%= t.inquiry_submit %>
            </button>
        </form>
    </div>

    <%- include('partials/footer') %>