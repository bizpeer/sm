<%- include('../partials/header') %>

    <section style="min-height: 70vh; display: flex; align-items: center; justify-content:center;">
        <div class="inquiry-form" style="width: 100%; max-width: 400px;">
            <h2 style="text-align: center; margin-bottom: 2rem;">관리자 로그인</h2>
            <% if(locals.error) { %>
                <p style="color: red; text-align: center; margin-bottom: 1rem;">
                    <%= error %>
                </p>
                <% } %>
                    <form action="/admin/login" method="POST">
                        <div class="form-group">
                            <label for="id">ID</label>
                            <input type="text" id="id" name="id" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" required>
                        </div>
                        <button type="submit" class="submit-btn" id="loginBtn">로그인</button>
                    </form>
        </div>
    </section>

    <script>
        // GitHub Pages mock logic
        if (location.hostname.includes('github.io')) {
            document.getElementById('loginBtn').addEventListener('click', function (e) {
                e.preventDefault();
                const id = document.getElementById('id').value;
                const pw = document.getElementById('password').value;
                if (id === 'jjssjw' && pw === '01052181377') {
                    location.href = '/sm/admin/dashboard.html';
                } else {
                    alert('ID 또는 비밀번호가 틀렸습니다.');
                }
            });
        }
    </script>

    <%- include('../partials/footer') %>