<%- include('partials/header') %>

    <section class="hero">
        <div class="hero-content">
            <h1>
                <%= t.home_hero_slogan %>
            </h1>
        </div>
    </section>

    <section id="products" class="products-section">
        <h2 class="section-title">
            <%= t.menu_products %>
        </h2>
        <div class="product-grid">
            <% if (products && products.length> 0) { %>
                <% products.slice(0, 6).forEach(function(image) { %>
                    <div class="product-card">
                        <img src="<%= baseUrl %>/images/products/<%= image %>" alt="Product" class="product-image">
                        <div class="product-info">
                            <a href="<%= baseUrl %>/<%= lang === 'ko' ? '' : lang %>/inquiry?product=<%= image %>"
                                class="inquiry-btn">
                                <%= t.inquiry_button %>
                            </a>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <!-- Fallback if no images -->
                            <% for(let i=1; i<=6; i++) { %>
                                <div class="product-card">
                                    <div
                                        style="height:250px; background:#eee; display:flex; align-items:center; justify-content:center;">
                                        No Image</div>
                                    <div class="product-info">
                                        <a href="<%= baseUrl %>/<%= lang === 'ko' ? '' : lang %>/inquiry"
                                            class="inquiry-btn">
                                            <%= t.inquiry_button %>
                                        </a>
                                    </div>
                                </div>
                                <% } %>
                                    <% } %>
        </div>
    </section>

    <%- include('partials/footer') %>